	"version": "0.1.0",
	"command": "npm",
	"options": {
		"cwd": "${workspaceRoot}/client"
	},
	"isShellCommand": true,
	"showOutput": "always",
	"suppressTaskName": true,
	"tasks": [
		{
			"taskName": "watcher",
			"args": [
				"run",
				"watch"
			]
		}
	],
	"echoCommand": true
}